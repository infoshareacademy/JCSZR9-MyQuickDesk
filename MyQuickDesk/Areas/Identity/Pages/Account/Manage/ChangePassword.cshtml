@page
@using MyQuickDesk.Resources;
@model ChangePasswordModel
@{
    ViewData["Title"] = @Resource.ChangePassword;
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<div class="container-main">
    <h3 class="shadow-text row justify-content-center">@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div>
        <div>
            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder=@Resource.OldPassword />
                    <label asp-for="Input.OldPassword" class="form-label">@Resource.OldPassword </label>
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder=@Resource.NewPassword />
                    <label asp-for="Input.NewPassword" class="form-label">@Resource.NewPassword </label>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder=@Resource.PleaseConfirm />
                    <label asp-for="Input.ConfirmPassword" class="form-label">@Resource.PleaseConfirm</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <hr />
                <button type="submit" class="w-100 btn btn-lg btn-primary">@Resource.UpdatePassword</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
