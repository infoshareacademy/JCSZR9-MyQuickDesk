@page
@using MyQuickDesk.Resources;
@model PersonalDataModel
@{
    ViewData["Title"] = @Resource.PersonalData;
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<style>
    .container-main {
        max-width: 400px; 
        margin: 0 auto; 
        overflow: hidden;
    }

</style>

<div class="container-main">
    <h3 class="shadow-text row justify-content-center">@ViewData["Title"]</h3>

    <div>
        <div>
            <p>@Resource.PersonaldataText</p>
            <p>
                <strong>@Resource.PersonaldataText2</strong>
            </p>
            <hr />
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="btn btn-primary" type="submit">@Resource.Download</button>
            </form>
            <p>
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger" style="margin-top: 10px">@Resource.Delete</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
