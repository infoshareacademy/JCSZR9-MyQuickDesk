@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<style>
    .container-main {
        max-width: 400px; /* Dostosuj maksymalną szerokość do preferencji */
        margin: 0 auto; /* Wyśrodkuj kontener na stronie */
        overflow: hidden; /* Ukryj elementy wychodzące poza kontener */
    }

</style>

<div class="container-main">
    <h3 class="shadow-text row justify-content-center">@ViewData["Title"]</h3>

    <div>
        <div>
            <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
            <p>
                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            </p>
            <hr />
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="btn btn-primary" type="submit">Download</button>
            </form>
            <p>
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger" style="margin-top: 10px">Delete</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
