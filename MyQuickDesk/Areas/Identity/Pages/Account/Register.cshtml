@page
@using MyQuickDesk.Resources;
@model RegisterModel
@{
    ViewData["Title"] = Resource.CreateNewAccount;
}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var containerMain = document.querySelector('.container-main');
        containerMain.style.opacity = '0';
        containerMain.style.transform = 'translateY(-100px)';

        setTimeout(function () {
            containerMain.style.transition = 'opacity 1s ease-in-out, transform 1s ease-in-out';
            containerMain.style.opacity = '1';
            containerMain.style.transform = 'translateY(0)';
        }, 100);
    });
</script>

<style>
    body {
        background-image: url('/img/background.png');
        background-repeat: no-repeat;
        background-size: cover;
        min-height: 100vh;
        margin: 0;
    }

    .container-main {
        background-color: rgba(245, 245, 245, 0.7);
        border-radius: 20px;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        width: 60%;
        margin: 10px auto;
        backdrop-filter: blur(5px);
        text-align: center;
    }

    .btn-primary {
        background-color: #F5F5F5;
        border-color: #F5F5F5;
        color: #333;
    }

    .button-icon {
        width: 30px;
        height: 30px;
        vertical-align: middle;
    }

    .default-img {
        display: inline;
    }

    .hover-img {
        display: none;
    }

    .register-btn:hover .default-img {
        display: none;
    }

    .register-btn:hover .hover-img {
        display: inline;
    }

    .register-btn {
        transition: background-color 0.5s ease-in-out;
    }

        .register-btn:hover {
            background-color: #7BA798;
        }

    .default-img {
        transition: opacity 0.5s ease-in-out;
        opacity: 1;
    }

    .hover-img {
        transition: opacity 0.5s ease-in-out;
        opacity: 0;
    }

    .register-btn:hover .default-img {
        opacity: 0;
    }

    .register-btn:hover .hover-img {
        opacity: 1;
    }

    .link-btn {
        background-color: #7BA798;
        color: white;
        border: 2px solid #7BA798;
        border-radius: 35px;
        padding: 10px;
        font-size: 15px;
        margin-top: 0px;
        margin-bottom: 20px;
    }
</style>

<div class="container-main">
    <h1 class="register-title">@ViewData["Title"]</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Resource.NewPassword</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword" class="form-label">@Resource.PleaseConfirm</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="parent-container">
                    <button id="registerSubmit" type="submit" class="register-btn">
                        <img src="~/icons/registericon.png" alt="Register Icon" class="button-icon default-img">
                        <img src="~/icons/registericon-bright.png" alt="Register Icon Bright" class="button-icon hover-img"> Register
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
