@model MyQuickDesk.Entities.Reservation

@{
    ViewData["Title"] = "Details";
}
<style>
    body {
        background-image: url('/img/backgroundtabs.png');
        background-repeat: no-repeat;
        background-size: 1920px 1080px;
    }

    .center-container {
        margin-top: 100px;
    }

    .bold-header {
        font-weight: bold;
        margin-bottom: 30px;
    }
</style>
<div class="center-container">
    <div class="container-main">
        <h1 class="shadow-text row justify-content-center">@Resource.Details</h1>
        <div class="row justify-content-center">
            <div>
                <h4>@Resource.Reservation</h4>
                <hr />
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td class="col-sm-2 font-weight-bold">
                                 <label>@Resource.StartTime</label>
                            </td>
                            <td class="col-sm-10">@Model.StartTime</td>
                        </tr>
                        <tr>
                            <td class="col-sm-2 font-weight-bold">
                                <label>@Resource.EndTime</label>
                            </td>
                            <td class="col-sm-10">@Model.EndTime</td>
                        </tr>
                        <tr>
                            <td class="col-sm-2 font-weight-bold">
                                <label>@Resource.Name</label>
                            </td>
                            <td class="col-sm-10">@Model.Space.Name</td>
                        </tr>
                    </tbody>
                </table>
                <hr />
                <div>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="edit-link">@Resource.Edit</a>
                    }
                    <a class="back-to-list-btn" asp-action="Index">@Resource.Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
