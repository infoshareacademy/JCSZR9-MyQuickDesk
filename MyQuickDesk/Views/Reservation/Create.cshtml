@model MyQuickDesk.Entities.Reservation

@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        background-image: url('/img/backgroundtabs.png');
        background-repeat: no-repeat;
        background-size: 1920px 1080px;
    }
</style>
<div class="container-main"/>
<h1 class="shadow-text row justify-content-center">@Resource.CreateReservation</h1>

<hr />
<div class="row justify-content-center">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>@Resource.StartTime</label>
                <input asp-for="StartTime" class="form-control" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Resource.EndTime</label>
                <input asp-for="EndTime" class="form-control" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Resource.Name</label>
                <input asp-for="Space.Name" class="form-control" disabled />
            </div>

            <input type="hidden" name="spaceId" value="@ViewBag.SpaceId" />
                <hr />
            <div class="form-group">
                <input type="submit" value=@Resource.Create class="btn btn-primary" />
            </div>
        </form>
        
        <div>
            <a asp-action="Index" class="back-to-list-btn">@Resource.Back</a>
        </div>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}





