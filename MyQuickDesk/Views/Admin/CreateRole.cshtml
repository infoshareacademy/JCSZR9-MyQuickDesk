@using Humanizer.Localisation;
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "CreateRole";
}
<style>
    body {
        background-image: url('/img/backgroundtabs.png');
        background-repeat: no-repeat;
    }

    .bold-label::after {
        content: ":";
    }

    .bold-label {
        font-weight: bold;
    }
</style>

<div class="container-main">
    <h1 class="shadow-text row justify-content-center">@Resource.CreateNewRole</h1>
    <hr />
    <form method="post">
        <label for="roleName" class="bold-label">@Resource.RoleName</label>
        <input type="text" name="roleName" required />
        <button type="submit" class="btn btn-primary">@Resource.Create</button>
    </form>
</div>