@model MyQuickDesk.Entities.ParkingSpot

@{
    ViewData["Title"] = "Edit";
}
<style>
    body {
        background-image: url('/img/backgroundtabs.png');
        background-repeat: no-repeat;
        background-size: 1920px 1080px;
    }
</style>
<div class="container-main">
    <h1 class="shadow-text row justify-content-center">@Resource.Edit</h1>

<h4>@Resource.ParkingSpot</h4>
    <hr />
    <div class="row justify-content-center">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HandicappedSpot" />@Resource.HandicappedSpot
                </label>
            </div>
                <div class="form-group form-check" style="margin-bottom: 30px;">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Charger" /> @Resource.Charger
                </label>
            </div>

            <div class="form-group">
                <label>@Resource.Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Resource.Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Resource.MaxCapacity</label>
                <input asp-for="MaxCapacity" class="form-control" />
                <span asp-validation-for="MaxCapacity" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value=@Resource.Save class="btn btn-primary" />
            </div>
        </form>
                <a asp-action="Index" class="back-to-list-btn">@Resource.Back</a>
<div>
 
</div>
    </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
