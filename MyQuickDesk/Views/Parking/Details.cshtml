@model MyQuickDesk.Entities.ParkingSpot

@{
    ViewData["Title"] = "Details";
}
<style>
    body {
        background-image: url('/img/backgroundtabs.png');
        background-repeat: no-repeat;
        background-size: 1920px 1080px;
    }

    .center-container {
        margin-top: 100px;
    }

    .bold-header {
        font-weight: bold;
        margin-bottom: 30px;
    }
</style>

<div class="center-container">
    <div class="container-main">
        <h1 class="shadow-text row justify-content-center">@Resource.Details</h1>
        <h4>@Resource.ParkingSpot</h4>
        <div class="row justify-content-center">
            <hr />
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td class="col-sm-2 font-weight-bold">@Resource.Name</td>
                        <td class="col-sm-10">@Model.Name</td>
                    </tr>
                    <tr>
                        <td class="col-sm-2 font-weight-bold">@Resource.Description</td>
                        <td class="col-sm-10">@Model.Description</td>
                    </tr>
                    <tr>
                        <td class="col-sm-2 font-weight-bold">@Resource.HandicappedSpot</td>
                        <td class="col-sm-10">@Model.HandicappedSpot</td>
                    </tr>
                    <tr>
                        <td class="col-sm-2 font-weight-bold">@Resource.Charger</td>
                        <td class="col-sm-10">@Model.Charger</td>
                    </tr>
                    <tr>
                        <td class="col-sm-2 font-weight-bold">@Resource.IsAvaiable</td>
                        <td class="col-sm-10">@Model.IsAvaiable</td>
                    </tr>
                </tbody>
            </table>
            <hr />
            <div>
                @if (User.IsInRole("Admin"))
                {

                    <a asp-action="Edit" asp-route-id="@Model.Id" class="edit-link">@Resource.Edit</a>
                }
                <a asp-action="Index" class="back-to-list-btn">@Resource.Back</a>
            </div>
        </div>

    </div>
</div>

    


