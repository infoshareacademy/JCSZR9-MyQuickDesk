@model MyQuickDesk.Entities.Room

@{
    ViewData["Title"] = "Details";
}
<style>
    body {
        background-image: url('/img/backgroundtabs.png');
        background-repeat: no-repeat;
        background-size: 1920px 1080px;
    }

    .center-container {
        margin-top: 100px;
    }

    .bold-header {
        font-weight: bold;
        margin-bottom: 30px;
    }
</style>
<div class="center-container">
    <div class="container-main">
        <h1 class="shadow-text row justify-content-center">Details</h1>
        <div class="row justify-content-center">
            <h4>Room</h4>
            <hr />
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td class="col-sm-2 font-weight-bold">Name</td>
                        <td class="col-sm-10">@Model.Name</td>
                    </tr>
                    <tr>
                        <td class="col-sm-2 font-weight-bold">Description</td>
                        <td class="col-sm-10">@Model.Description</td>
                    </tr>
                    <tr>
                        <td class="col-sm-2 font-weight-bold">Max Capacity</td>
                        <td class="col-sm-10">@Model.MaxCapacity</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <hr />
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="edit-link">Edit</a>
            <a class="back-to-list-btn" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
