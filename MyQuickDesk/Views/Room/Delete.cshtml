@model MyQuickDesk.Entities.Room

@{
    ViewData["Title"] = "Delete";
}
<style>
    body {
        background-image: url('/img/backgroundtabs.png');
        background-repeat: no-repeat;
        background-size: 1920px 1080px;
    }

    .center-container {
        margin-top: 100px;
    }

    .bold-header {
        font-weight: bold;
        margin-bottom: 30px;
    }
</style>
<div class="center-container">
    <div class="container-main">
    <h1 class="shadow-text row justify-content-center">@Resource.Delete</h1>
        <div class="row justify-content-center">
            <h2 class="bold-header">@Resource.AreYouSure?</h2>
            <div>
                <hr />
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td class="col-sm-2 font-weight-bold">@Resource.Name</td>
                            <td class="col-sm-10">@Model.Name</td>
                        </tr>
                        <tr>
                            <td class="col-sm-2 font-weight-bold">@Resource.Description</td>
                            <td class="col-sm-10">@Model.Description</td>
                        </tr>
                        <tr>
                            <td class="col-sm-2 font-weight-bold">@Resource.MaxCapacity</td>
                            <td class="col-sm-10">@Model.MaxCapacity</td>
                        </tr>
                    </tbody>
                </table>
                <hr />
                <form asp-action="Delete">
                    <div>
                        <button type="submit" class="btn btn-danger">
                            <img src="~/Icons/Deleteicon.png" alt="Delete Icon" width="20" height="20">
                            @Resource.Delete
                        </button>
                        <a class="back-to-list-btn" asp-action="Index" class="back-to-list-btn">@Resource.Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
