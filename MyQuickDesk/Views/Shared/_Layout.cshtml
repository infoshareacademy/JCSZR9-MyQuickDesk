@inject MyQuickDesk.ApplicationUser.IUserContext UserContext
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyQuickDesk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyQuickDesk.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyQuickDesk</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (UserContext.IsUserLoggedIn())
                        {
                            <li class="nav-item">
                                <a class="nav-link text-custom" asp-area="" asp-controller="Home" asp-action="Index">@Resource.Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-custom" asp-area="" asp-controller="Parking" asp-action="Index">@Resource.ParkingSpot</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-custom" asp-area="" asp-controller="Room" asp-action="Index">@Resource.ConferencialRoom</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-custom" asp-area="" asp-controller="Desk" asp-action="Index">@Resource.Desk</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-custom" asp-area="" asp-controller="Reservation" asp-action="Index">@Resource.Myreservations</a>
                            </li>

                            
@*                            @if (User.IsInRole("Admin"))
                            {*@
                                <li class="nav-item">
                                    <a class="nav-link text-custom" asp-area="" asp-controller="Admin" asp-action="Index">@Resource.Admin</a>
                                </li>
                            @*}*@
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @if (Context.Request.Path.Equals("/") || Context.Request.Path.Equals("/Home"))

    {
        <a href="@Url.Action("ChangeLanguage", "Home", new { culture = "pl-PL" })">Polski</a>
        <a href="@Url.Action("ChangeLanguage", "Home", new { culture = "en-US" })">English</a>
       
    }

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MyQuickDesk - <a asp-area="" asp-controller="Home" asp-action="Privacy">@Resource.AboutUs</a>
        </div>
    </footer>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>
