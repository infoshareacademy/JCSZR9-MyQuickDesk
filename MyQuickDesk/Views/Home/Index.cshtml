@using MyQuickDesk.ApplicationUser;
@inject IUserContext UserContext

@{
    ViewData["Title"] = "Home Page";
}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var containerMain = document.querySelector('.container-main');
        containerMain.style.opacity = '0';
        containerMain.style.transform = 'translateY(-100px)';

        setTimeout(function () {
            containerMain.style.transition = 'opacity 1s ease-in-out, transform 1s ease-in-out';
            containerMain.style.opacity = '1';
            containerMain.style.transform = 'translateY(0)';
        }, 100);
    });
</script>
<style>
    body {
        background-image: url('/img/background.png');
        background-repeat: no-repeat;
        background-size: 1920px 1080px;
    }

    .container-main {
        background-color: rgba(245, 245, 245, 0.7);
        border-radius: 20px;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        width: 60%;
        margin: 10px auto;
        backdrop-filter: blur(5px);
        text-align: center;
    }

    .btn-primary {
        background-color: #F5F5F5;
        border-color: #F5F5F5;
        color: #333;
    }

    .QuickDeskLogo {
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.5);
        border-radius: 50%;
    }

    .image-button {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 5px;
    }

    .image-container {
        position: relative;
        width: 29px;
        height: 29px;
        margin-left: -20px;
        margin-right: 30px; 
    }

    .button-icon {
        position: absolute;
        width: 100%;
        height: 100%;
        transition: opacity 0.5s ease-in-out;
    }

    .default-img {
        opacity: 1;
    }

    .hover-img {
        opacity: 0;
    }

    .image-button:hover .default-img {
        opacity: 0;
    }

    .image-button:hover .hover-img {
        opacity: 1;
    }



</style>

<div class= "container-main">
    <h1 class="display-4">Productivity starts here.</h1>
    <img src="~/img/newlogo-small.png" class="QuickDeskLogo" alt="MyQuickDesk-logo">

    <div class="d-flex flex-column align-items-center">
        @if (UserContext.IsUserLoggedIn())
        {
            <a href="/Desk" class="btn btn-primary image-button">
                <div class="image-container">
                    <img src="~/icons/Deskicon.png" alt="Desk Icon" class="button-icon default-img">
                    <img src="~/icons/Deskicon-bright.png" alt="Desk Icon Bright" class="button-icon hover-img">
                </div>
                Book hotdesk
            </a>
            <a href="/Room" class="btn btn-primary image-button">
                <div class="image-container">
                    <img src="~/icons/Conferenceicon.png" alt="Conference Icon" class="button-icon default-img">
                    <img src="~/icons/Conferenceicon-bright.png" alt="Conference Icon Bright" class="button-icon hover-img">
                </div>
                Book conference room
            </a>
        }
        else
        {
            <a href="/Identity/Account/Login" class="btn btn-primary mb-3 image-button">
                <div class="image-container">
                    <img src="~/icons/Loginicon.png" alt="Login Icon" class="button-icon default-img">
                    <img src="~/icons/Loginicon-bright.png" alt="Login Icon Bright" class="button-icon hover-img">
                </div>
                Login to Book your hotdesk
            </a>

            <a href="/Identity/Account/Register" class="btn btn-primary" style="font-size: 1.0em;">
                I don't have an account yet
            </a>
        }
    </div>
</div>


